[core]
 	editor = vim
[user]
	email = info@jonasdevlieghere.com
	name = JDevlieghere
[push]
	default = simple
[grep]
	extendRegexp = true
	lineNumber = true
[color]
	ui = auto
	branch = auto
	diff = auto
	status = auto
[alias]
	aa = add -A
	ca = commit -vam
	ci = commit -v
	df = diff --color-words --word-diff-regex=.
	di = diff
	lg = log -p
	noff = merge --no-ff
	st = status
[credential]
	helper = cache --timeout=3600
