# Better ls
alias ll="ls -lha"

# Human-readable disk usage
alias df="df -Tha --total"

# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias ips="ifconfig -a | grep -o 'inet6\? \(addr:\)\?\s\?\(\(\([0-9]\+\.\)\{3\}[0-9]\+\)\|[a-fA-F0-9:]\+\)' | awk '{ sub(/inet6? (addr:)? ?/, \"\"); print }'"
alias whois="whois -h whois-servers.net"

# Processes
alias psa="ps auxf"
alias psg="ps aux | grep -v grep | grep -i -e VSZ -e"
alias psmy='ps -fu $USER | sort | egrep -v "ps -fu|sort|grep"'

# History
alias hig="history | grep"

# Find matching files
alias lsg='ll | grep'

# Map function
alias map="xargs -n1"

# Ctags
alias mkctags="ctags -R -f .tags --extra=+f"

# Reload shell
alias reload="exec $SHELL -l"

# Build from source
alias bld="./configure && make -j && make install"
alias localbld="./configure --prefix=$HOME/usr && make -j && make install"

# Support 256 colors in tmux
alias tmux="TERM=screen-256color-bce tmux"

# Clang Format
alias google-format="find . -name '*.c' -o -name '*.cpp' -o -name '*.cxx' -o -name '*.h' -o -name '*.hpp' -print0 | xargs -0 clang-format -i -style=Google"
